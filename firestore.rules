rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isDoctor() {
        return exists(/databases/$(database)/documents/roles_doctor/$(request.auth.uid));
    }
    
    function isDoctorForConsultation(consultationId) {
        return isDoctor() && get(/databases/$(database)/documents/users/$(resource.data.userId)/consultations/$(consultationId)).data.doctorId == request.auth.uid;
    }

    // User Profiles
    match /users/{userId} {
      // Anyone can read a user's public profile
      allow get: if true;
      // Only the owner can create, update, or delete their profile
      allow write: if isOwner(userId);
    }
    
    // Reminders Subcollection
    match /users/{userId}/reminders/{reminderId} {
        // Only the owner can read or write their own reminders
        allow read, write: if isOwner(userId);
    }

    // Consultations Subcollection
    match /users/{userId}/consultations/{consultationId} {
        // Patient can access their own consultations
        // Doctor assigned to the consultation can also access it
        allow read, write: if isOwner(userId) || isDoctorForConsultation(consultationId);
    }

    // Doctor Roles
    match /roles_doctor/{userId} {
        // Only admins should be able to write to this collection (not enforced here, should be done via backend)
        allow read: if isSignedIn();
        allow write: if false; // Disallow client-side writes for security
    }
  }
}
