{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Stores public information about a user.",
      "properties": {
        "displayName": { "type": "string", "description": "The user's public display name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "createdAt": { "type": "string", "format": "date-time", "description": "The timestamp when the user profile was created." }
      },
      "required": ["displayName", "createdAt"]
    },
    "Reminder": {
      "title": "Reminder",
      "type": "object",
      "description": "A reminder for medication, exercises, or appointments.",
      "properties": {
        "title": { "type": "string" },
        "time": { "type": "string", "format": "time" },
        "type": { "type": "string", "enum": ["exercise", "Eye Drops", "Pill", "Capsule", "Liquid", "appointment"] },
        "enabled": { "type": "boolean" },
        "dosage": { "type": "string" },
        "frequency": { "type": "string" },
        "reason": { "type": "string" },
        "appearance": {
          "type": "object",
          "properties": {
            "shape": { "type": "string" },
            "color": { "type": "string" }
          }
        },
        "note": { "type": "string" }
      },
      "required": ["title", "type", "enabled"]
    },
    "Consultation": {
      "title": "Consultation",
      "type": "object",
      "description": "Represents a telemedicine consultation.",
      "properties": {
        "userId": { "type": "string", "description": "The UID of the patient." },
        "doctorId": { "type": "string", "description": "The UID of the doctor." },
        "patientName": { "type": "string" },
        "scheduledTime": { "type": "string", "format": "date-time" },
        "duration": { "type": "number", "description": "Duration in minutes." },
        "type": { "type": "string", "enum": ["routine", "follow_up", "urgent", "second_opinion"] },
        "status": { "type": "string", "enum": ["scheduled", "in_progress", "completed", "cancelled"] },
        "meetingLink": { "type": "string", "format": "uri" },
        "notes": { "type": "string" }
      },
      "required": ["userId", "doctorId", "patientName", "scheduledTime", "duration", "type", "status", "meetingLink"]
    },
    "Doctor": {
        "title": "Doctor",
        "type": "object",
        "description": "A profile for a doctor.",
        "properties": {
            "name": { "type": "string" },
            "specialty": { "type": "string" }
        },
        "required": ["name", "specialty"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public user profile information."
    },
    "/users/{userId}/reminders/{reminderId}": {
      "schema": { "$ref": "#/entities/Reminder" },
      "description": "Stores user-specific reminders."
    },
    "/users/{userId}/consultations/{consultationId}": {
        "schema": { "$ref": "#/entities/Consultation" },
        "description": "Subcollection for a patient's consultations."
    },
    "/roles_doctor/{userId}": {
      "schema": { "type": "object", "properties": { "isDoctor": { "type": "boolean" } } },
      "description": "A document indicating if a user has a doctor role. Used for role-based access control."
    }
  }
}
